<div class="post">
  <article class="card" style="margin-top: 3%;">
    <div class="card-header flex-row justify-space-between">
      <h2>{{title}}</h2>
      <div>
        Posted by {{user.username}} on {{format_date date_created}}
      </div>
    </div>
    <div class="card-body">
      {{content}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card" style="margin-top: 2%;">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}



  <form id="new-comment-form" class="card" style="margin-top: 3%;">
    <div class="card-header">
      <h3>Add Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

     <div class="mb-3">
      <label class="form-label" for="comment-body">Comment</label>
    </div>

      <textarea name="comment-body" class="form-control"></textarea>

    <div style="margin-top: 3%;">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>


<script src="/js/comment.js"></script>

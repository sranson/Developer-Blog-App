<div class="post">
  <article class="card" style="margin-top: 3%;">
    <div class="card-header flex-row justify-space-between">
      <h2>{{posts.title}}</h2>
      <div>
        Posted by {{posts.User.username}} on
      </div>
    </div>
    <div class="card-body">
      {{posts.content}}
    </div>



    {{#if posts.comments }}
    <section class="card" style="margin-top: 2%;">
      <div class="card-header">
        <h3>Comments</h3>
      </div>
    {{#each posts.comments}}
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{content}}</li>
                Posted by: {{User.username}}
            </ul>
    {{/each}}
    </section>
  {{/if}}
  </article>




  <form id="commentForm" class="card" style="margin-top: 3%;">
    <div class="card-header">
      <h3>Add Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" id="post-id" value="{{posts.id}}" />

     <div class="mb-3">
      <label class="form-label" for="commentLabel">Comment</label>
    </div>
      <textarea name="commentContent" class="form-control"></textarea>
    <div style="margin-top: 3%;">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>


<script src="/js/newComment.js"></script>
